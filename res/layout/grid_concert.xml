<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/concert_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/concert_container_selector">

        <ImageView
                android:id="@+id/concert_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        <TextView
                android:id="@+id/concert_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/concert_title_padding"
                android:textSize="@dimen/concert_title_text_size"
                android:textColor="@color/concert_title_text_color"
                android:gravity="center"
                android:background="@drawable/concert_title_selector"/>

        <TextView
                android:id="@+id/concert_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/concert_description_padding"
                android:textSize="@dimen/concert_description_text_size"
                android:textColor="@color/concert_description_text_color"
                android:background="@drawable/concert_description_selector"/>

    </LinearLayout>

</RelativeLayout>