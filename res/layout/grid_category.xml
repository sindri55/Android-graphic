<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/category_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category_container_selector">

        <ImageView
                android:id="@+id/category_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

        <TextView
                android:id="@+id/category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/category_title_padding"
                android:textSize="@dimen/category_title_text_size"
                android:textColor="@color/category_title_text_color"
                android:gravity="center"
                android:background="@drawable/category_title_selector"/>
    </LinearLayout>

</RelativeLayout>